{
  "version": 1,
  "include": ["/*"],
  "exclude": [
    "/_next/*",
    "/images/*",
    "/favicon.ico",
    "/robots.txt",
    "/sitemap.xml",
    "/manifest.json"
  ],
  "routes": [
    {
      "src": "^/hospitals/([^/]+)/?$",
      "dest": "/hospitals/$1/index.html",
      "status": 200
    },
    {
      "src": "^/api/hospitals/([^/]+)/?$",
      "dest": "/api/hospitals/$1/index.html",
      "status": 200
    },
    {
      "src": "^/api/hospitals/?$",
      "dest": "/api/hospitals/index.html",
      "status": 200
    },
    {
      "src": "^/$",
      "dest": "/index.html",
      "status": 200
    },
    {
      "src": "^/404/?$",
      "dest": "/404.html",
      "status": 404
    },
    {
      "src": ".*",
      "dest": "/index.html",
      "status": 200
    }
  ]
} 