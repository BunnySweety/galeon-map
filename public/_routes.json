{
  "version": 1,
  "include": ["/*"],
  "exclude": [
    "/_next/*",
    "/api/*"
  ],
  "routes": [
    {
      "src": "^/hospitals/([^/]+)/?$",
      "dest": "/hospitals/$1"
    },
    {
      "src": "^/api/hospitals/?$",
      "dest": "/api/hospitals"
    },
    {
      "src": "^/api/hospitals/([^/]+)/?$",
      "dest": "/api/hospitals/$1"
    },
    {
      "src": "^/((?!_next|api).*)",
      "dest": "/$1"
    },
    {
      "src": "^/$",
      "dest": "/"
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "/_not-found"
    }
  ]
} 